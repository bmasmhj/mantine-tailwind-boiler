{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        "typeRoots": ["types.d.ts"],

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": false
    },
    "include": [
        "src",
        // "src/",
         "index.d.ts",
         "tailwind.config.js",
         "postcss.config.js",
         "lint-staged.js",
         ".eslintrc.cjs",
        // "src/service-worker.ts",
        // "src/setupTests.ts",
        // "src/setupTests.js",
        // "src/serviceWorkerRegistration.ts",
        "types.d.ts"
    ],
    //"include": ["src","types.d.ts"],
    "exclude": [
        "cypress",
        "cypress//.cy.ts",
        "cypress/*/.cy.js",
        "cypress//**.js",
        "cypress//**.ts",
        "cypress.config.ts"
    ],
    "references": [{ "path": "./tsconfig.node.json" }]
}
